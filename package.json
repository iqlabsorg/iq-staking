    "eth-sig-util": "^3.0.1",
    "ethers": "^6.11.1",
    "hardhat": "^2.19.0",
    "hardhat-deploy": "^0.11.43",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.2.5",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
